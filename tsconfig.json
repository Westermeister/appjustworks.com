{
  "compilerOptions": {
    "outDir": "./frontend/dist/assets/scripts",
    "strict": true,
    "module": "ES2015",
    "target": "ES2017",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["tests"]
}
